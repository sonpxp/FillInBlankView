<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer ngoài cùng - border đứt khúc -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#DCDEE9"
                android:dashWidth="4dp"
                android:dashGap="4dp" />
            <corners android:radius="8dp" />
            <padding
                android:bottom="6dp"
                android:left="6dp"
                android:right="6dp"
                android:top="6dp" />
        </shape>
    </item>

    <!-- Layer bên trong - background màu xám -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DCDEE9" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>